{
  "compilerOptions": {
    "sourceMap": true,
    "module": "es6",
    "target": "es6",
    "outDir": "dist/",
    "noImplicitAny": false,
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "components/*": ["./client/components/*"],
      "pages/*": ["./client/pages/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
